
@{
    ViewBag.Title = "Profile";
}

<div class="box box-primary">
    <div class="box-body box-profile">
        @{
            var userAccount = Converter.CookieToUserAccount(User.Identity.Name);
        }
        <img class="profile-user-img img-responsive img-circle" src="~/Images/Employees/@userAccount.Photo" alt="User profile picture">

        <h3 class="profile-username text-center">@userAccount.FullName</h3>

        <p class="text-muted text-center">Software Engineer</p>


        <a href="~/Account/ChangePassword" class="btn btn-primary btn-block"><b>Change Password</b></a>
    </div>
    <!-- /.box-body -->
</div>


